{
  "$schema": "https://github.com/vedantmgoyal9/winget-pkgs-automation/raw/main/schema.json",
  "PackageIdentifier": "maygo.tockler",
  "Source": [
    {
      "InvokeType": "RestMethod",
      "Uri": "https://api.github.com/repos/MayGo/tockler/releases?per_page=1",
      "Method": "Get",
      "Headers": {
        "Authorization": "\"Bearer $GithubBotToken\"",
        "Accept": "application/vnd.github.v3+json"
      },
      "Body": "",
      "UserAgent": ""
    }
  ],
  "PostResponseScript": [
    "$UpdateCondition = $Response.prerelease -eq $PreRelease",
    "$InstUrls = @()",
    "$InstUrls += @('|x64|user', '|x64|machine').ForEach({ $Response.assets.Where({ $_.name -match 'tockler.*-setup-win-x64.exe$' }).browser_download_url + $_ })",
    "$InstUrls += @('|x86|user', '|x86|machine').ForEach({ $Response.assets.Where({ $_.name -match 'tockler.*-setup-win-ia32.exe$' }).browser_download_url + $_ })"
  ],
  "Update": {
    "PackageVersion": "$Response.tag_name.TrimStart('v')",
    "InstallerUrls": "$InstUrls"
  },
  "AdditionalInfo": {
    "PreRelease": false,
    "ForceUpgrade": false
  },
  "PostUpgradeScript": "",
  "Skip": {
    "Skip?": false,
    "Reason": null
  }
}
