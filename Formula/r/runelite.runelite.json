{
  "$schema": "https://github.com/vedantmgoyal9/winget-pkgs-automation/raw/main/schema.json",
  "PackageIdentifier": "RuneLite.RuneLite",
  "Source": [
    {
      "InvokeType": "RestMethod",
      "Uri": "https://api.github.com/repos/runelite/launcher/releases?per_page=1",
      "Method": "Get",
      "Headers": {
        "Authorization": "\"Bearer $GithubBotToken\"",
        "Accept": "application/vnd.github.v3+json"
      },
      "Body": "",
      "UserAgent": ""
    }
  ],
  "PostResponseScript": "$UpdateCondition = $Response.prerelease -eq $PreRelease",
  "Update": {
    "PackageVersion": "$Response.tag_name.TrimStart('v')",
    "InstallerUrls": "$Response.assets.Where({ $_.name -match '.exe$' }).browser_download_url.ForEach({ ($_ -match 'RuneLiteSetup.exe$') ? $_ + '|x64' : ($_ -match 'RuneLiteSetup32.exe$') ? $_ + '|x86' : $_ })"
  },
  "AdditionalInfo": {
    "PreRelease": false,
    "ForceUpgrade": false
  },
  "PostUpgradeScript": "",
  "Skip": {
    "Skip?": false,
    "Reason": null
  }
}
