{
  "$schema": "https://github.com/vedantmgoyal2009/vedantmgoyal2009/raw/main/winget-pkgs-automation/schema.json",
  "Identifier": "StandardNotes.StandardNotes",
  "Update": {
    "InvokeType": "RestMethod",
    "Uri": "https://api.github.com/repos/standardnotes/app/releases?per_page=1",
    "Method": "Get",
    "Headers": {
      "Authorization": "$AuthToken",
      "Accept": "application/vnd.github.v3+json"
    },
    "Body": "",
    "UserAgent": ""
  },
  "PostResponseScript": "$Response = $Response | Where-Object { $_.name.Contains('Desktop') } | Select-Object -First 1",
  "VersionRegex": "(?<=v)[0-9.]+",
  "InstallerRegex": ".(exe|msi|msix|appx)(bundle){0,1}$",
  "PreviousVersion": "3.23.221",
  "ManifestFields": {
    "PackageVersion": "$Response.tag_name.TrimStart('@standardnotes/desktop@')",
    "InstallerUrls": "$Response.assets | ForEach-Object { if ($_.name -match $InstallerRegex) { $_.browser_download_url } }",
    "ReleaseNotesUrl": "$Response.html_url",
    "ReleaseDate": "(Get-Date -Date $Response.published_at).ToString('yyyy-MM-dd')"
  },
  "AdditionalInfo": {
    "PreRelease": false,
    "PreviousReleaseId": 80181515
  },
  "PostUpgradeScript": "$Package.AdditionalInfo.PreviousReleaseId = $Response.id",
  "YamlCreateParams": {
    "SkipPRCheck": false,
    "DeletePreviousVersion": false
  },
  "SkipPackage": false
}
