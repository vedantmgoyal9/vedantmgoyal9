{
  "$schema": "https://github.com/vedantmgoyal9/vedantmgoyal9/raw/main/WinGetAutomation/schema.json",
  "PackageIdentifier": "Element.Element",
  "Source": [
    {
      "InvokeType": "RestMethod",
      "Uri": "https://api.github.com/repos/vector-im/element-web/releases?per_page=1",
      "Method": "Get",
      "Headers": {
        "Authorization": "\"Bearer $env:GITHUB_BOT_TOKEN\"",
        "Accept": "application/vnd.github.v3+json"
      },
      "Body": "",
      "UserAgent": ""
    }
  ],
  "PostResponseScript": "$UpdateCondition = $Response.prerelease -eq $PreRelease",
  "Update": {
    "PackageVersion": "$Response.tag_name.TrimStart('v')",
    "InstallerUrls": "\"https://packages.element.io/desktop/install/win32/x64/Element%20Setup%20$($Response.tag_name.TrimStart('v')).exe\"",
    "ReleaseDate": "(Get-Date -Date $Response.published_at).ToString('yyyy-MM-dd')"
  },
  "AdditionalInfo": {
    "PreRelease": false,
    "ForceUpgrade": false,
    "VersionRegex": "(?<=v)[0-9.]+",
    "InstallerRegex": ".exe$"
  },
  "PostUpgradeScript": "",
  "Skip": {
    "Skip?": false,
    "Reason": null
  }
}
